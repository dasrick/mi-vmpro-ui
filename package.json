{
  "name": "mi-vmpro-ui",
  "version": "0.0.2",
  "description": "AngularJS frontend app for VideoManager Pro of MovingImage.",
  "main": "serve.js",
  "author": "Enrico Hoffmann",
  "license": "MIT",
  "keywords": [
    "angularjs",
    "vmpro"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dasrick/mi-vmpro-ui.git"
  },
  "bugs": {
    "url": "https://github.com/dasrick/mi-vmpro-ui/issues"
  },
  "homepage": "https://github.com/dasrick/mi-vmpro-ui#readme",
  "engines": {
    "node": "0.12.*"
  },
  "dependencies": {
    "express": "^4.13.1"
  },
  "devDependencies": {
    "angular": "^1.4.3",
    "angular-mocks": "^1.4.4",
    "angular-resource": "^1.4.4",
    "angular-ui-router": "^0.2.15",
    "clean-css": "^3.3.9",
    "david": "^6.1.6",
    "fs-extra": "^0.23.1",
    "glob": "^5.0.13",
    "istanbul-instrumenter-loader": "^0.1.3",
    "jasmine-core": "^2.3.4",
    "jscs": "^2.1.0",
    "json-loader": "^0.5.2",
    "karma": "^0.13.3",
    "karma-coverage": "^0.5.0",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-webpack": "^1.7.0",
    "less": "^2.5.1",
    "less-plugin-autoprefix": "^1.4.2",
    "phantomjs": "^1.9.18",
    "webpack": "^1.11.0"
  },
  "scripts": {
    "postinstall": "npm run build",
    "start": "node serve.js",
    "prebuild": "mkdir -p web/css/ web/js/ web/views/",
    "build": "npm run build:css && npm run jscs && npm run build:scripts && npm run build:views",
    "build:css": "lessc --autoprefix='last 2 versions,ie 9' src/media/less/style.less  web/css/style.css && cleancss --source-map -o web/css/style.min.css web/css/style.css",
    "build:scripts": "webpack --module-bind json -d src/app.js web/js/app.js",
    "build:views": "node scripts/copy.js src/**/views/*.html web/views/",
    "jscs": "jscs ./src ./tests ./scripts",
    "test": "node_modules/karma/bin/karma start karma.config.js"
  }
}
